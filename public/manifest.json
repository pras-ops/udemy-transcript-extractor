{
  "manifest_version": 3,
  "name": "Transcript Extractor",
  "version": "4.0.0",
  "description": "Extract transcripts from educational platforms with smart sequential processing and multiple export formats",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://*.udemy.com/*",
    "https://*.coursera.org/*",
    "https://*.youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Transcript Extractor"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.udemy.com/*",
        "https://*.coursera.org/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
